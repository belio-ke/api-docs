                              "10MB",
                              "20MB",
                              "25MB",
                              "30MB",
                              "50MB",
                              "100MB",
                              "150MB",
                              "200MB",
                              "250MB",
                              "500MB",
                              "750MB",
                              "1GB",
                              "2GB",
                              "3GB",
                              "5GB",
                              "10GB"
                            ],
