                    "reference": {
                      "type": "string",
                      "description": "Unique identifier for the bundle"
                    },
                    "band": {
                      "type": "string",
                      "enum": [
                        "STARTER",
                        "STANDARD",
                        "ENTERPRISE",
                        "CUSTOM",
                        "PERSONAL",
                        "SANDBOX"
